{
  "manifest_version": 2, 
  "name": "TrueEmojisFirefox",
  "version": "0.0.0.2",
  
  "description": "Nahrazuje smajlíky z diskuzního fóra vlastními a umožňuje uživateli vzhled smajlíků měnit.",
  
  "author": "KrásnýDen",
 
  "content_scripts": [{
    "css": ["emojis.css"],
    "js": ["content.js"],
    "matches": ["https://is.muni.cz/*"]
  }],
  
  "browser_action": {
	"default_title": "TrueEmojisFirefox",
    "default_popup": "popup.html",
	"default_icon": {
	  "48": "/icons/gigachad48.png",
	  "128": "/icons/gigachad128.png"
	}
  },
  
  "web_accessible_resources": [
    "/emojis/*",
	"script.js"
  ],
  
  "permissions": [
    "storage",
	"activeTab"
  ],
  
  "icons": {
    "48": "/icons/gigachad48.png",
    "64": "/icons/gigachad64.png",
    "128": "/icons/gigachad128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "borderify@example.com"
    }
  }
}